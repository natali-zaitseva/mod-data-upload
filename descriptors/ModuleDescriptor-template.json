{
  "id": "${artifactId}-${version}",
  "name": "Books",
  "requires": [],
  "provides": [
    {
      "id": "books",
      "version": "1.0",
      "handlers": [
        {
          "methods": ["GET"],
          "pathPattern": "/nataliaBook",
          "permissionsRequired": ["book.collection.get"]
        },
        {
          "methods": ["POST"],
          "pathPattern": "/nataliaBook",
          "permissionsRequired": ["book.item.post"]
        },
        {
          "methods": ["GET"],
          "pathPattern": "/nataliaBook/{id}",
          "permissionsRequired": ["book.item.get"]
        },
        {
          "methods": ["PUT"],
          "pathPattern": "/nataliaBook/{id}",
          "permissionsRequired": ["book.item.put"]
        },
        {
          "methods": ["DELETE"],
          "pathPattern": "/nataliaBook/{id}",
          "permissionsRequired": [ "book.item.delete"]
        }
      ]
    },
    {
      "id": "_tenant",
      "version": "1.0",
      "interfaceType": "system",
      "handlers": [
        {
          "methods": ["POST"],
          "pathPattern": "/_/tenant"
        },
        {
          "methods": ["DELETE"],
          "pathPattern": "/_/tenant"
        }
      ]
    }
  ],
  "permissionSets": [
    {
      "permissionName": "book.collection.get",
      "displayName": "Book - get books collection",
      "description": "Get books collection"
    },
    {
      "permissionName": "book.item.get",
      "displayName": "Book - get individual book from storage",
      "description": "Get individual book"
    },
    {
      "permissionName": "book.item.post",
      "displayName": "Book - create book",
      "description": "Create book"
    },
    {
      "permissionName": "book.item.put",
      "displayName": "Book - modify book",
      "description": "Modify book"
    },
    {
      "permissionName": "book.item.delete",
      "displayName": "Book - delete book",
      "description": "Delete book"
    },
    {
      "permissionName": "book.all",
      "displayName": "Book module - all permissions",
      "description": "Entire set of permissions needed to use the books module",
      "subPermissions": [
        "book.collection.get",
        "book.item.get",
        "book.item.post",
        "book.item.put",
        "book.item.delete"
      ],
      "visible": false
    }
  ],
  "launchDescriptor": {
    "dockerImage": "${artifactId}:${version}",
    "dockerArgs": {
      "HostConfig": { "PortBindings": { "8081/tcp":  [{ "HostPort": "%p" }] } }
    },
    "dockerPull" : false
  }
}
